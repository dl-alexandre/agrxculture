---
// Critical CSS Component for Page Speed Optimization
// Inlines critical above-the-fold styles to prevent render-blocking

interface Props {
  pageType?: 'home' | 'about' | 'services' | 'showcase' | 'contact';
}

const { pageType = 'home' } = Astro.props;

// Critical CSS for each page type
const criticalCSS = {
  home: `
    /* Critical Home Page Styles */
    body { 
      margin: 0; 
      font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      color: #212121;
      background-color: #fafafa;
    }
    .skip-link {
      position: absolute;
      top: -40px;
      left: 6px;
      background: #2E7D32;
      color: white;
      padding: 8px;
      text-decoration: none;
      border-radius: 4px;
      z-index: 1000;
    }
    .skip-link:focus {
      top: 6px;
    }
    .site-header {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid #e0e0e0;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .hero {
      min-height: 80vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      background: linear-gradient(135deg, #2E7D32 0%, #4CAF50 100%);
      color: white;
    }
    .hero-title {
      font-size: clamp(2rem, 5vw, 4rem);
      font-weight: 700;
      margin-bottom: 1rem;
    }
    .hero-subtitle {
      font-size: clamp(1.1rem, 2.5vw, 1.5rem);
      opacity: 0.9;
      margin-bottom: 2rem;
    }
    .cta-button {
      display: inline-block;
      padding: 1rem 2rem;
      background: #FFC107;
      color: #212121;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: transform 0.2s ease;
    }
    .cta-button:hover {
      transform: translateY(-2px);
    }
  `,
  about: `
    /* Critical About Page Styles */
    body { 
      margin: 0; 
      font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
