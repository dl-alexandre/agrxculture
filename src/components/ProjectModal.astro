---
// This component will be rendered but hidden by default
// JavaScript will handle showing/hiding and populating content
---

<div
  id="project-modal"
  class="modal-overlay"
  aria-hidden="true"
  role="dialog"
  aria-labelledby="modal-title"
>
  <div class="modal-container">
    <div class="modal-header">
      <h2 id="modal-title" class="modal-title"></h2>
      <button
        class="modal-close"
        aria-label="Close case study modal"
        type="button"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-content">
      <div class="modal-image">
        <img id="modal-image" src="" alt="" />
      </div>

      <div class="modal-body">
        <div class="case-study-section">
          <h3>The Challenge</h3>
          <p id="modal-problem"></p>
        </div>

        <div class="case-study-section">
          <h3>The Solution</h3>
          <p id="modal-solution"></p>
        </div>

        <div class="case-study-section">
          <h3>The Results</h3>
          <p id="modal-outcome"></p>
        </div>

        <div class="modal-metrics">
          <div class="metric-grid">
            <div class="metric-item">
              <span class="metric-label">Impact:</span>
              <span id="modal-improvement" class="metric-value"></span>
            </div>
            <div class="metric-item">
              <span class="metric-label">Timeline:</span>
              <span id="modal-timeline" class="metric-value"></span>
            </div>
            <div class="metric-item">
              <span class="metric-label">Scale:</span>
              <span id="modal-scale" class="metric-value"></span>
            </div>
          </div>
        </div>

        <div class="modal-technologies">
          <h4>Technologies Used</h4>
          <div id="modal-tech-list" class="tech-list"></div>
        </div>

        <div class="modal-actions">
          <div class="action-links">
            <a
              id="modal-demo-link"
              href="#"
              class="btn btn-primary"
              target="_blank"
              rel="noopener noreferrer"
              style="display: none;"
            >
              View Live Demo
            </a>
            <a
              id="modal-github-link"
              href="#"
              class="btn btn-secondary"
              target="_blank"
              rel="noopener noreferrer"
              style="display: none;"
            >
              View Source Code
            </a>
          </div>

          <div class="download-section">
            <a
              id="modal-pdf-link"
              href="#"
              class="download-link"
              target="_blank"
              rel="noopener noreferrer"
              style="display: none;"
            >
              <span class="download-icon">ðŸ“„</span>
              Download Full Case Study (PDF)
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease-out,
      visibility 0.3s ease-out;
    padding: var(--space-lg);
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-container {
    background: var(--color-surface);
    border-radius: var(--border-radius-lg);
    max-width: 900px;
    max-height: 90vh;
    width: 100%;
    overflow: hidden;
    transform: translateY(20px);
    transition: transform 0.3s ease-out;
    display: flex;
    flex-direction: column;
  }

  .modal-overlay.active .modal-container {
    transform: translateY(0);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
    background: var(--color-background);
  }

  .modal-title {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: var(--font-size-2xl);
    color: var(--color-text-secondary);
    cursor: pointer;
    padding: var(--space-xs);
    border-radius: var(--border-radius-sm);
    transition: background-color 0.2s ease-out;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-close:hover {
    background: var(--color-background-alt);
    color: var(--color-text-primary);
  }

  .modal-content {
    overflow-y: auto;
    flex: 1;
  }

  .modal-image {
    height: 300px;
    overflow: hidden;
  }

  .modal-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .modal-body {
    padding: var(--space-lg);
  }

  .case-study-section {
    margin-bottom: var(--space-xl);
  }

  .case-study-section h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .case-study-section p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-size: var(--font-size-md);
  }

  .modal-metrics {
    background: var(--color-background-alt);
    padding: var(--space-lg);
    border-radius: var(--border-radius-md);
    margin-bottom: var(--space-xl);
  }

  .metric-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-md);
  }

  .metric-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .metric-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .metric-value {
    font-size: var(--font-size-lg);
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .modal-technologies {
    margin-bottom: var(--space-xl);
  }

  .modal-technologies h4 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tech-list .tech-badge {
    background: var(--color-secondary-light);
    color: var(--color-secondary);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .modal-actions {
    border-top: 1px solid var(--color-border);
    padding-top: var(--space-lg);
  }

  .action-links {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .download-section {
    text-align: center;
  }

  .download-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--border-radius-sm);
    transition: background-color 0.2s ease-out;
  }

  .download-link:hover {
    background: var(--color-primary-light);
  }

  .download-icon {
    font-size: var(--font-size-lg);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .modal-overlay {
      padding: var(--space-md);
    }

    .modal-header {
      padding: var(--space-md);
    }

    .modal-body {
      padding: var(--space-md);
    }

    .modal-title {
      font-size: var(--font-size-xl);
    }

    .action-links {
      flex-direction: column;
    }

    .metric-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Focus management for accessibility */
  .modal-overlay:focus-within .modal-close:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>
