---
// Offline page for better user experience
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Offline - Agrxculture</title>
  <meta name="description" content="You're currently offline. Some features may not be available.">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #2E7D32 0%, #1b5e20 100%);
      color: white;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 2rem;
    }
    
    .offline-container {
      max-width: 600px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 3rem 2rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .offline-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 2rem;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
    }
    
    .offline-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .offline-message {
      font-size: 1.125rem;
      margin-bottom: 2rem;
      opacity: 0.9;
      line-height: 1.6;
    }
    
    .offline-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .offline-button {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: 2px solid rgba(255, 255, 255, 0.3);
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    
    .offline-button:hover {
      background: rgba(255, 255, 255, 0.3);
      border-color: rgba(255, 255, 255, 0.5);
      transform: translateY(-2px);
    }
    
    .offline-status {
      margin-top: 2rem;
      padding: 1rem;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      font-size: 0.875rem;
    }
    
    .retry-indicator {
      display: none;
      margin-top: 1rem;
      padding: 0.5rem;
      background: rgba(255, 193, 7, 0.2);
      border-radius: 4px;
      color: #ffc107;
    }
    
    @media (max-width: 768px) {
      .offline-container {
        padding: 2rem 1rem;
      }
      
      .offline-title {
        font-size: 2rem;
      }
      
      .offline-actions {
        flex-direction: column;
      }
      
      .offline-button {
        width: 100%;
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <div class="offline-container">
    <div class="offline-icon">
      üì°
    </div>
    
    <h1 class="offline-title">You're Offline</h1>
    
    <p class="offline-message">
      It looks like you've lost your internet connection. Don't worry - you can still access some features that we've cached for you.
    </p>
    
    <div class="offline-actions">
      <button class="offline-button" onclick="retryConnection()">
        üîÑ Try Again
      </button>
      
      <a href="/agrxculture/" class="offline-button">
        üè† Go Home
      </a>
      
      <button class="offline-button" onclick="clearCache()">
        üóëÔ∏è Clear Cache
      </button>
    </div>
    
    <div class="offline-status">
      <strong>Status:</strong> Offline
      <br>
      <small>Last updated: <span id="last-updated"></span></small>
    </div>
    
    <div class="retry-indicator" id="retry-indicator">
      Attempting to reconnect...
    </div>
  </div>
  
  <script>
    // Update last updated time
    document.getElementById('last-updated').textContent = new Date().toLocaleString();
    
    // Check connection status
    function checkConnection() {
      if (navigator.onLine) {
        window.location.reload();
      }
    }
    
    // Retry connection
    function retryConnection() {
      const indicator = document.getElementById('retry-indicator');
      indicator.style.display = 'block';
      
      // Check connection every 2 seconds
      const interval = setInterval(() => {
        if (navigator.onLine) {
          clearInterval(interval);
          indicator.style.display = 'none';
          window.location.reload();
        }
      }, 2000);
      
      // Stop checking after 30 seconds
      setTimeout(() => {
        clearInterval(interval);
        indicator.style.display = 'none';
        indicator.textContent = 'Connection failed. Please check your internet connection.';
      }, 30000);
    }
    
    // Clear cache
    async function clearCache() {
      try {
        if ('caches' in window) {
          const cacheNames = await caches.keys();
          await Promise.all(
            cacheNames.map(cacheName => caches.delete(cacheName))
          );
          
          // Reload the page
          window.location.reload();
        }
      } catch (error) {
        console.error('Failed to clear cache:', error);
        alert('Failed to clear cache. Please try again.');
      }
    }
    
    // Listen for online/offline events
    window.addEventListener('online', () => {
      window.location.reload();
    });
    
    window.addEventListener('offline', () => {
      // Already on offline page
    });
    
    // Check connection periodically
    setInterval(checkConnection, 5000);
    
    // Register service worker if not already registered
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/agrxculture/sw-performance.js')
        .then(registration => {
          console.log('Service Worker registered:', registration);
        })
        .catch(error => {
          console.error('Service Worker registration failed:', error);
        });
    }
  </script>
</body>
</html>
