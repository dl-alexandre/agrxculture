---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadProjects, loadProject } from '../../utils/content-loader.ts';
import { generateProjectPageSEO } from '../../utils/project-seo.ts';
import TestimonialsSection from '../../components/TestimonialsSection.astro';

export async function getStaticPaths() {
  const projects = loadProjects();
  return projects.map(project => ({
    params: { id: project.id },
    props: { project }
  }));
}

const { project } = Astro.props;
const projectId = project.id;
const projectsData = loadProjects();

// Generate comprehensive SEO data
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://agrxculture.github.io/agricultural-portfolio-website';
const { seoConfig, structuredData, breadcrumbs } = generateProjectPageSEO(projectId, siteUrl);
---

<BaseLayout 
  title={seoConfig.title}
  description={seoConfig.description}
  image={seoConfig.image}
  structuredData={structuredData}
  breadcrumbs={breadcrumbs}
>
  
  <div class="project-page">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <div class="container">
        <ol class="breadcrumb-list">
          <li><a href={import.meta.env.BASE_URL}>Home</a></li>
          <li><a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/showcase`}>Projects</a></li>
          <li aria-current="page">{project.title}</li>
        </ol>
      </div>
    </nav>
    
    <!-- Project Header -->
    <section class="project-header">
      <div class="container">
        <div class="project-header-content">
          <div class="project-meta">
            {project.featured && <span class="featured-badge">Featured Project</span>}
            <span class="project-category">{project.category}</span>
          </div>
          
          <h1 class="project-title">{project.title}</h1>
          <p class="project-description">{project.description}</p>
          
          <div class="project-metrics-header">
            <div class="metric">
              <span class="metric-label">Impact</span>
              <span class="metric-value">{project.metrics.improvement}</span>
            </div>
            <div class="metric">
              <span class="metric-label">Timeline</span>
              <span class="metric-value">{project.metrics.timeline}</span>
            </div>
            <div class="metric">
              <span class="metric-label">Scale</span>
              <span class="metric-value">{project.metrics.scale}</span>
            </div>
          </div>
          
          <div class="project-actions">
            {project.links.demo && (
              <a href={project.links.demo} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                View Live Demo
              </a>
            )}
            {project.links.github && (
              <a href={project.links.github} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
                View Source Code
              </a>
            )}
          </div>
        </div>
        
        <div class="project-image-container">
          <img 
            src={project.image} 
            alt={`Screenshot of ${project.title}`}
            class="project-image"
            width="600"
            height="400"
          />
        </div>
      </div>
    </section>
    
    <!-- Case Study Content -->
    <section class="case-study-content">
      <div class="container">
        <div class="case-study-grid">
          <div class="case-study-main">
            <div class="case-study-section">
              <div class="case-study-content" set:html={project.content} />
            </div>
            
            {project.pdfDownload && (
              <div class="case-study-section">
                <h2>Download Full Case Study</h2>
                <a href={project.pdfDownload} class="download-link" target="_blank" rel="noopener noreferrer">
                  <span class="download-icon">üìÑ</span>
                  Download PDF Case Study
                </a>
              </div>
            )}
          </div>
          
          <aside class="case-study-sidebar">
            <div class="sidebar-section">
              <h3>Technologies Used</h3>
              <div class="tech-list">
                {project.technologies.map(tech => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
            </div>
            
            <div class="sidebar-section">
              <h3>Project Tags</h3>
              <div class="tag-list">
                {project.tags.map(tag => (
                  <span class="tag-badge">{tag}</span>
                ))}
              </div>
            </div>
            
            <div class="sidebar-section">
              <h3>Project Details</h3>
              <dl class="project-details">
                <dt>Completed</dt>
                <dd>{new Date(project.dateCompleted).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}</dd>
                <dt>Category</dt>
                <dd>{project.category}</dd>
              </dl>
            </div>
            
            <div class="sidebar-section">
              <h3>Related Services</h3>
              <div class="related-services">
                {project.tags.includes('IoT') && (
                  <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/services/iot-integration`} class="service-link">
                    <span class="service-icon">üåæ</span>
                    IoT Integration
                  </a>
                )}
                {project.tags.includes('Mobile') && (
                  <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/services/mobile-apps`} class="service-link">
                    <span class="service-icon">üì±</span>
                    Mobile Apps
                  </a>
                )}
                {project.tags.includes('Analytics') && (
                  <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/services/data-analytics`} class="service-link">
                    <span class="service-icon">üìä</span>
                    Data Analytics
                  </a>
                )}
                {project.tags.includes('API') && (
                  <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/services/api-development`} class="service-link">
                    <span class="service-icon">üîó</span>
                    API Development
                  </a>
                )}
                {(project.tags.includes('Automation') || project.category === 'Farm Management') && (
                  <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/services/automation-systems`} class="service-link">
                    <span class="service-icon">‚öôÔ∏è</span>
                    Automation Systems
                  </a>
                )}
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>
    
    <!-- Client Testimonials -->
    <TestimonialsSection 
      projectId={project.id}
      title="What Clients Say About This Project"
    />
    
    <!-- Related Projects -->
    <section class="related-projects">
      <div class="container">
        <h2>More Projects</h2>
        <div class="related-grid">
          {projectsData
            .filter(p => p.id !== project.id)
            .slice(0, 3)
            .map(relatedProject => (
              <article class="related-project-card">
                <a href={`/projects/${relatedProject.id}`} class="related-project-link">
                  <img 
                    src={relatedProject.image} 
                    alt={`Screenshot of ${relatedProject.title}`}
                    class="related-project-image"
                    width="300"
                    height="200"
                  />
                  <div class="related-project-content">
                    <h3>{relatedProject.title}</h3>
                    <p>{relatedProject.description}</p>
                    <span class="related-project-category">{relatedProject.category}</span>
                  </div>
                </a>
              </article>
            ))
          }
        </div>
        
        <div class="view-all-projects">
          <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/showcase`} class="btn btn-outline">View All Projects</a>
        </div>
      </div>
    </section>
    
    <!-- Call to Action -->
    <section class="project-cta">
      <div class="container">
        <div class="cta-content">
          <h2>Interested in a Similar Solution?</h2>
          <p>
            Let's discuss how Agrxculture can help you develop custom agricultural technology 
            that addresses your specific farming challenges and goals.
          </p>
          <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/contact`} class="btn btn-primary btn-lg">
            Start Your Project
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .project-page {
    min-height: 100vh;
  }
  
  .container {
    max-width: var(--container-lg);
    margin: 0 auto;
    padding: 0 var(--space-md);
  }
  
  /* Breadcrumb */
  .breadcrumb {
    background: var(--color-background-alt);
    padding: var(--space-md) 0;
  }
  
  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: var(--font-size-sm);
  }
  
  .breadcrumb-list li:not(:last-child)::after {
    content: '‚Üí';
    margin-left: var(--space-sm);
    color: var(--color-text-secondary);
  }
  
  .breadcrumb-list a {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .breadcrumb-list a:hover {
    text-decoration: underline;
  }
  
  /* Project Header */
  .project-header {
    padding: var(--space-3xl) 0;
    background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-background) 100%);
  }
  
  .project-header .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }
  
  .project-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }
  
  .featured-badge {
    background: var(--color-accent);
    color: white;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 600;
  }
  
  .project-category {
    background: var(--color-primary-light);
    color: var(--color-primary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }
  
  .project-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
    line-height: 1.2;
  }
  
  .project-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-xl);
  }
  
  .project-metrics-header {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    padding: var(--space-lg);
    background: var(--color-surface);
    border-radius: var(--border-radius-md);
  }
  
  .metric {
    text-align: center;
  }
  
  .metric-label {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }
  
  .metric-value {
    display: block;
    font-size: var(--font-size-lg);
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  .project-actions {
    display: flex;
    gap: var(--space-md);
  }
  
  .project-image-container {
    position: relative;
  }
  
  .project-image {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
  }
  
  /* Case Study Content */
  .case-study-content {
    padding: var(--space-3xl) 0;
  }
  
  .case-study-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-3xl);
  }
  
  .case-study-section {
    margin-bottom: var(--space-3xl);
  }
  
  .case-study-section h2 {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
  }
  
  .case-study-section p {
    font-size: var(--font-size-md);
    color: var(--color-text-secondary);
    line-height: 1.7;
  }
  
  .case-study-content h2 {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    margin-top: var(--space-2xl);
  }
  
  .case-study-content h2:first-child {
    margin-top: 0;
  }
  
  .case-study-content p {
    font-size: var(--font-size-md);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }
  
  .download-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-md) var(--space-lg);
    border: 2px solid var(--color-primary);
    border-radius: var(--border-radius-md);
    transition: all 0.2s ease-out;
  }
  
  .download-link:hover {
    background: var(--color-primary);
    color: white;
  }
  
  .download-icon {
    font-size: var(--font-size-lg);
  }
  
  /* Sidebar */
  .case-study-sidebar {
    background: var(--color-surface);
    padding: var(--space-xl);
    border-radius: var(--border-radius-lg);
    height: fit-content;
    position: sticky;
    top: var(--space-xl);
  }
  
  .sidebar-section {
    margin-bottom: var(--space-xl);
  }
  
  .sidebar-section:last-child {
    margin-bottom: 0;
  }
  
  .sidebar-section h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }
  
  .tech-list, .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }
  
  .tech-badge {
    background: var(--color-secondary-light);
    color: var(--color-secondary);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }
  
  .tag-badge {
    background: var(--color-primary);
    color: white;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }
  
  .project-details {
    margin: 0;
  }
  
  .project-details dt {
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-xs);
  }
  
  .project-details dd {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    margin-left: 0;
  }
  
  /* Related Services */
  .related-services {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .service-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    text-decoration: none;
    color: var(--color-text-primary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: all 0.2s ease-out;
  }
  
  .service-link:hover {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    transform: translateX(2px);
  }
  
  .service-icon {
    font-size: var(--font-size-md);
  }
  
  /* Related Projects */
  .related-projects {
    padding: var(--space-3xl) 0;
    background: var(--color-background-alt);
  }
  
  .related-projects h2 {
    font-size: var(--font-size-3xl);
    font-weight: 600;
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }
  
  .related-project-card {
    background: var(--color-surface);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
  }
  
  .related-project-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .related-project-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .related-project-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .related-project-content {
    padding: var(--space-lg);
  }
  
  .related-project-content h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .related-project-content p {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    line-height: 1.5;
    margin-bottom: var(--space-md);
  }
  
  .related-project-category {
    background: var(--color-primary-light);
    color: var(--color-primary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 500;
  }
  
  .view-all-projects {
    text-align: center;
  }
  
  /* Call to Action */
  .project-cta {
    background: var(--color-primary);
    color: white;
    padding: var(--space-3xl) 0;
    text-align: center;
  }
  
  .cta-content h2 {
    font-size: var(--font-size-3xl);
    font-weight: 600;
    margin-bottom: var(--space-md);
  }
  
  .cta-content p {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto var(--space-xl);
    line-height: 1.6;
  }
  
  .btn-lg {
    padding: var(--space-md) var(--space-xl);
    font-size: var(--font-size-lg);
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .case-study-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }
    
    .case-study-sidebar {
      position: static;
    }
  }
  
  @media (max-width: 768px) {
    .project-header .container {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }
    
    .project-title {
      font-size: var(--font-size-3xl);
    }
    
    .project-metrics-header {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    
    .project-actions {
      flex-direction: column;
    }
    
    .case-study-sidebar {
      padding: var(--space-lg);
    }
    
    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>