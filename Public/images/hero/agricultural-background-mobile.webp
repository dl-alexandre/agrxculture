<svg width="480" height="600" viewBox="0 0 480 600" xmlns="http://www.w3.org/2000/svg">
  <!-- Mobile optimized agricultural background -->
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#98FB98;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="fieldGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#9ACD32;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#228B22;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Sky -->
  <rect width="480" height="200" fill="url(#skyGradient)"/>
  
  <!-- Field -->
  <rect y="200" width="480" height="400" fill="url(#fieldGradient)"/>
  
  <!-- Simplified crop rows for mobile -->
  <g stroke="#2F4F2F" stroke-width="2" opacity="0.6">
    <line x1="0" y1="300" x2="480" y2="310"/>
    <line x1="0" y1="350" x2="480" y2="360"/>
    <line x1="0" y1="400" x2="480" y2="410"/>
    <line x1="0" y1="450" x2="480" y2="460"/>
  </g>
  
  <!-- IoT Sensors -->
  <g fill="#FF6B35">
    <circle cx="100" cy="320" r="6"/>
    <circle cx="240" cy="340" r="6"/>
    <circle cx="380" cy="360" r="6"/>
  </g>
  
  <!-- Sensor connections -->
  <g stroke="#FF6B35" stroke-width="2" stroke-dasharray="3,3" opacity="0.7">
    <line x1="100" y1="320" x2="240" y2="340"/>
    <line x1="240" y1="340" x2="380" y2="360"/>
  </g>
  
  <!-- Simplified tractor -->
  <g fill="#8B4513" transform="translate(350, 250)">
    <rect x="0" y="15" width="40" height="20" rx="3"/>
    <rect x="5" y="0" width="20" height="15" rx="2"/>
    <circle cx="10" cy="40" r="8"/>
    <circle cx="30" cy="40" r="8"/>
  </g>
  
  <!-- Mobile-optimized text -->
  <text x="20" y="50" font-family="Arial, sans-serif" font-size="16" fill="#2F4F2F" opacity="0.8">
    Smart Farming
  </text>
</svg>