    </symbol>
    
    <!-- Automation Icon -->
    <symbol id="icon-automation" viewBox="0 0 24 24">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
    </symbol>
    
    <!-- Arrow Right Icon -->
    <symbol id="icon-arrow-right" viewBox="0 0 24 24">
      <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
    </symbol>
  </defs>
</svg>

<style>
  .service-detail-page {
    min-height: 100vh;
  }

  .container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  /* Breadcrumb */
  .breadcrumb {
    padding: var(--space-lg) 0;
    background: var(--color-surface-variant);
    border-bottom: 1px solid var(--color-border);
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: var(--font-size-sm);
  }

  .breadcrumb-list li:not(:last-child)::after {
    content: '/';
    margin-left: var(--space-sm);
    color: var(--color-text-secondary);
  }

  .breadcrumb-list a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumb-list a:hover {
    text-decoration: underline;
  }

  .breadcrumb-list li[aria-current="page"] {
    color: var(--color-text-secondary);
  }

  /* Service Hero */
  .service-hero {
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-surface-variant) 100%);
  }

  .service-hero-content {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-2xl);
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .service-icon-hero {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
    border-radius: var(--border-radius-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .service-icon-hero .icon {
    width: 60px;
    height: 60px;
    fill: var(--color-text-on-primary);
  }

  .service-hero-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--line-height-tight);
  }

  .service-hero-description {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-xl);
  }

  .service-hero-benefits {
    margin-bottom: var(--space-2xl);
  }

  .benefit-badge-hero {
    display: inline-block;
    background: var(--color-success);
    color: var(--color-text-on-primary);
    padding: var(--space-md) var(--space-xl);
    border-radius: var(--border-radius-full);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
  }

  .service-hero-actions {
    display: flex;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .primary-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-primary);
    color: var(--color-text-on-primary);
    padding: var(--space-lg) var(--space-2xl);
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
    transition: all var(--transition-fast);
  }

  .primary-cta:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .secondary-cta {
    display: inline-flex;
    align-items: center;
    background: transparent;
    color: var(--color-primary);
    padding: var(--space-lg) var(--space-2xl);
    border: 2px solid var(--color-primary);
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
    transition: all var(--transition-fast);
  }

  .secondary-cta:hover {
    background: var(--color-primary);
    color: var(--color-text-on-primary);
  }

  /* Service Content */
  .service-content-section {
    padding: var(--space-4xl) 0;
  }

  .service-content-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--space-3xl);
    align-items: start;
  }

  .service-main-content {
    min-width: 0;
  }

  .service-content-text {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2xl);
  }

  .service-content-text h2 {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin: var(--space-2xl) 0 var(--space-lg);
  }

  .service-content-text ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
  }

  .service-content-text li {
    padding: var(--space-sm) 0;
    position: relative;
    padding-left: var(--space-xl);
  }

  .service-content-text li::before {
    content: 'âœ“';
    color: var(--color-success);
    position: absolute;
    left: 0;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
  }

  .service-content-text strong {
    color: var(--color-text-primary);
    font-weight: var(--font-weight-semibold);
  }

  /* Technologies Section */
  .technologies-section {
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-border);
  }

  .technologies-section h2 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .tech-badges-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .tech-badge-detailed {
    background: var(--color-surface-variant);
    color: var(--color-text-primary);
    padding: var(--space-md) var(--space-lg);
    border-radius: var(--border-radius-lg);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    border: 1px solid var(--color-border);
  }

  /* Sidebar */
  .service-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .sidebar-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-xl);
  }

  .sidebar-card h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .service-info-list {
    margin-bottom: var(--space-xl);
  }

  .service-info-list dt {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
  }

  .service-info-list dd {
    font-size: var(--font-size-base);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
    margin-left: 0;
  }

  .sidebar-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    background: var(--color-primary);
    color: var(--color-text-on-primary);
    padding: var(--space-md) var(--space-lg);
    border-radius: var(--border-radius-md);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    transition: all var(--transition-fast);
  }

  .sidebar-cta:hover {
    background: var(--color-primary-dark);
  }

  /* Related Services */
  .related-services-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .related-service-link {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-md);
    align-items: center;
    padding: var(--space-md);
    background: var(--color-surface-variant);
    border-radius: var(--border-radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .related-service-link:hover {
    background: var(--color-primary);
    color: var(--color-text-on-primary);
  }

  .related-service-icon {
    width: 32px;
    height: 32px;
    background: var(--color-primary);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .related-service-icon .icon {
    width: 16px;
    height: 16px;
    fill: var(--color-text-on-primary);
  }

  .related-service-link:hover .related-service-icon {
    background: var(--color-text-on-primary);
  }

  .related-service-link:hover .related-service-icon .icon {
    fill: var(--color-primary);
  }

  .related-service-content h4 {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-xs);
  }

  .related-service-content p {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .related-service-link:hover .related-service-content h4,
  .related-service-link:hover .related-service-content p {
    color: var(--color-text-on-primary);
  }

  /* Related Projects */
  .related-projects-section {
    padding: var(--space-4xl) 0;
    background: var(--color-surface-variant);
  }

  .section-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .related-projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-2xl);
  }

  .project-showcase-card {
    background: var(--color-surface);
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: all var(--transition-normal);
  }

  .project-showcase-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .project-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .project-showcase-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: var(--space-xl);
  }

  .project-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .project-description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-lg);
  }

  .project-metrics {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .metric {
    text-align: center;
  }

  .metric-label {
    display: block;
