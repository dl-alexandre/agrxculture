{
  "name": "agricultural-portfolio-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 4321 --host",
    "start": "astro dev --port 4321 --host",
    "build": "npm run process-content && astro build",
    "preview": "astro preview --port 4321 --host",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "optimize-performance": "node scripts/optimize-performance.js",
    "process-content": "node scripts/process-content.cjs",
    "validate-content": "node scripts/process-content.cjs",
    "lighthouse": "lighthouse http://localhost:4321 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless'",
    "performance-test": "npm run build && npm run lighthouse",
    "analyze-bundle": "astro build --analyze",
    "generate-cache-headers": "node scripts/generate-cache-headers.js",
    "setup-domain": "node scripts/setup-custom-domain.js",
    "verify-deployment": "node scripts/verify-deployment.js",
    "deploy:staging": "npm run build && npm run verify-deployment",
    "deploy:production": "npm run build && npm run generate-cache-headers && npm run verify-deployment",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "ci:start-preview": "astro preview --port 4321 --host",
    "ci:wait-preview": "wait-on -t 60000 http://localhost:4321/agrxculture/",
    "test:e2e:ci": "astro build && (npm run ci:start-preview & sleep 1 && npm run ci:wait-preview) && playwright test --reporter=html",
    "test:performance:ci": "astro build && (npm run ci:start-preview & sleep 1 && npm run ci:wait-preview) && node tests/performance/lighthouse-test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "vitest --run tests/accessibility",
    "test:performance": "node tests/performance/lighthouse-test.js",
    "test:all": "npm run test && npm run test:e2e && npm run test:accessibility && npm run test:performance"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.4",
    "@types/nodemailer": "^7.0.1",
    "astro": "^5.13.3",
    "gray-matter": "^4.0.3",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.8.0",
    "chrome-launcher": "^1.1.0",
    "cssnano": "^6.1.2",
    "eslint": "^8.0.0",
    "eslint-plugin-astro": "^0.29.0",
    "jsdom": "^23.0.0",
    "lighthouse": "^11.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.12.0",
    "sharp": "^0.34.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  }
}
