---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadService, loadServices, loadProjects } from '../../utils/content-loader.ts';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

// Helper function to create proper URLs with base path
function createUrl(path: string): string {
  const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
  if (path === '/' || path === '') return import.meta.env.BASE_URL;
  return `${baseUrl}${path.startsWith('/') ? path : '/' + path}`;
}

export async function getStaticPaths() {
  const services = loadServices();
  
  return services.map((service) => ({
    params: { id: service.id },
    props: { service }
  }));
}

const { service } = Astro.props;
const { id } = Astro.params;

// Load all projects for cross-linking
const projects = loadProjects();
const projectMap = new Map(projects.map(project => [project.id, project]));

// Get related projects
const relatedProjects = service.relatedProjects
  .map(projectId => projectMap.get(projectId))
  .filter(Boolean);

const title = `${service.title} - Agricultural Technology Services`;
const description = service.description;
---

<BaseLayout 
  title={title} 
  description={description}
  breadcrumbs={[
    { name: 'Home', url: '/' },
    { name: 'Services', url: '/services' },
    { name: service.title, url: `/services/${service.id}` }
  ]}
>
  <main class="service-detail-page">
    <!-- Breadcrumb Navigation -->
    <Breadcrumbs items={[
      { label: 'Home', url: '/' },
      { label: 'Services', url: '/services' },
      { label: service.title, url: `/services/${service.id}`, current: true }
    ]} />

    <!-- Service Hero Section -->
    <section class="service-hero">
      <div class="container">
        <div class="service-hero-content">
          <div class="service-icon-hero">
            <svg class={`icon icon-${service.icon}`} aria-hidden="true">
              <use href={`#icon-${service.icon}`}></use>
            </svg>
          </div>
          
          <div class="service-hero-text">
            <h1 class="service-hero-title">{service.title}</h1>
            <p class="service-hero-description">{service.description}</p>
            
            <div class="service-hero-benefits">
              <span class="benefit-badge-hero">{service.benefits}</span>
            </div>
            
            <div class="service-hero-actions">
              <a href={createUrl(service.ctaLink)} class="primary-cta">
                Get Started
                <svg class="cta-icon" aria-hidden="true">
                  <use href="#icon-arrow-right"></use>
                </svg>
              </a>
              <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/showcase`} class="secondary-cta">
                View Case Studies
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Content -->
    <section class="service-content-section">
      <div class="container">
        <div class="service-content-grid">
          <!-- Main Content -->
          <article class="service-main-content">
            <div class="service-content-text" set:html={service.content} />
            
            <!-- Technologies Section -->
            <div class="technologies-section">
              <h2>Technologies & Tools</h2>
              <div class="tech-badges-grid">
                {service.technologies && service.technologies.map((tech) => (
                  <span class="tech-badge-detailed">{tech}</span>
                ))}
              </div>
            </div>
          </article>

          <!-- Sidebar -->
          <aside class="service-sidebar">
            <!-- Quick Info -->
            <div class="sidebar-card">
              <h3>Service Overview</h3>
              <dl class="service-info-list">
                <dt>Service Type</dt>
                <dd>{service.schema.serviceType}</dd>
                
                <dt>Primary Benefit</dt>
                <dd>{service.benefits}</dd>
                
                <dt>Technologies</dt>
                <dd>{service.technologies ? service.technologies.slice(0, 3).join(', ') : 'N/A'}</dd>
                
                <dt>Target Audience</dt>
                <dd>{service.schema.areaServed}</dd>
              </dl>
              
              <a href={createUrl(service.ctaLink)} class="sidebar-cta">
                Start Your Project
                <svg class="cta-icon" aria-hidden="true">
                  <use href="#icon-arrow-right"></use>
                </svg>
              </a>
            </div>

            <!-- Related Services -->
            <div class="sidebar-card">
              <h3>Related Services</h3>
              <div class="related-services-list">
                {(loadServices() || [])
                  .filter(s => s.id !== service.id)
                  .slice(0, 3)
                  .map((relatedService) => (
                    <a href={`/services/${relatedService.id}`} class="related-service-link">
                      <div class="related-service-icon">
                        <svg class={`icon icon-${relatedService.icon}`} aria-hidden="true">
                          <use href={`#icon-${relatedService.icon}`}></use>
                        </svg>
                      </div>
                      <div class="related-service-content">
                        <h4>{relatedService.title}</h4>
                        <p>{relatedService.benefits}</p>
                      </div>
                    </a>
                  ))
                }
              </div>
            </div>
          </aside>
        </div>
      </div>
    </section>

    <!-- Related Projects Section -->
    {relatedProjects.length > 0 && (
      <section class="related-projects-section">
        <div class="container">
          <h2 class="section-title">Related Case Studies</h2>
          <p class="section-subtitle">
            See how this service has been applied in real agricultural projects
          </p>
          
          <div class="related-projects-grid">
            {relatedProjects && relatedProjects.map((project) => (
              <article class="project-showcase-card">
                <div class="project-image">
                  <img 
                    src={project.image} 
                    alt={`${project.title} project showcase`}
                    loading="lazy"
                  />
                </div>
                
                <div class="project-content">
                  <h3 class="project-title">{project.title}</h3>
                  <p class="project-description">{project.description}</p>
                  
                  <div class="project-metrics">
                    <div class="metric">
                      <span class="metric-label">Impact</span>
                      <span class="metric-value">{project.metrics.improvement}</span>
                    </div>
                    <div class="metric">
                      <span class="metric-label">Timeline</span>
                      <span class="metric-value">{project.metrics.timeline}</span>
                    </div>
                    <div class="metric">
                      <span class="metric-label">Scale</span>
                      <span class="metric-value">{project.metrics.scale}</span>
                    </div>
                  </div>
                  
                  <div class="project-technologies">
                    {project.technologies && project.technologies.slice(0, 4).map((tech) => (
                      <span class="tech-tag">{tech}</span>
                    ))}
                  </div>
                  
                  <a href={`/projects/${project.id}`} class="project-link">
                    View Case Study
                    <svg class="link-icon" aria-hidden="true">
                      <use href="#icon-arrow-right"></use>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Contact CTA Section -->
    <section class="contact-cta-section">
      <div class="container">
        <div class="contact-cta-content">
          <h2>Ready to Get Started with {service.title}?</h2>
          <p>
            Let's discuss how this service can be tailored to your specific agricultural needs. 
            Get a free consultation and project estimate.
          </p>
          <div class="contact-cta-actions">
            <a href={createUrl(service.ctaLink)} class="primary-cta-large">
              Start Your Project
              <svg class="cta-icon" aria-hidden="true">
                <use href="#icon-arrow-right"></use>
              </svg>
            </a>
            <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/contact`} class="secondary-cta-large">
              General Inquiry
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Schema.org structured data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": service.title,
    "description": service.description,
    "provider": {
      "@type": "Organization",
      "name": "Agrxculture",
      "url": "https://agrxculture.com",
      "sameAs": [
        "https://linkedin.com/company/agrxculture",
        "https://github.com/agrxculture"
      ]
    },
    "serviceType": service.schema.serviceType,
    "areaServed": service.schema.areaServed,
    "offers": {
      "@type": "Offer",
      "description": service.benefits,
      "url": `https://agrxculture.com${service.ctaLink}`
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Agricultural Technology Services",
      "itemListElement": (relatedProjects || []).map((project, index) => ({
        "@type": "Offer",
        "position": index + 1,
        "itemOffered": {
          "@type": "CreativeWork",
          "name": project.title,
          "description": project.description,
          "url": `https://agrxculture.com/projects/${project.id}`
        }
      }))
    }
  })} />
</BaseLayout>

<!-- SVG Icons (reuse from Services component) -->
<svg class="icon-sprite" aria-hidden="true" style="display: none;">
  <defs>
    <!-- IoT Sensors Icon -->
    <symbol id="icon-iot-sensors" viewBox="0 0 24 24">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      <circle cx="8" cy="8" r="2"/>
      <circle cx="16" cy="8" r="2"/>
      <circle cx="12" cy="16" r="2"/>
    </symbol>
    
    <!-- Mobile App Icon -->
    <symbol id="icon-mobile-app" viewBox="0 0 24 24">
